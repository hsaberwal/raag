# Test Environment Configuration (No AWS Required)

# Database Configuration (using SQLite for testing)
DB_TYPE=sqlite
DB_PATH=./test_database.sqlite

# For PostgreSQL testing (if you have it installed)
# DB_TYPE=postgresql
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=raag_test
# DB_USER=test_user
# DB_PASSWORD=test_password

# Local Storage (instead of S3)
USE_LOCAL_STORAGE=true
LOCAL_STORAGE_PATH=./local_storage

# Application Configuration
PORT=5200
HOST=0.0.0.0
NODE_ENV=development
JWT_SECRET=test_jwt_secret_key_for_demo
SESSION_SECRET=test_session_secret_key

# Audio Processing
MAX_FILE_SIZE_MB=50
SUPPORTED_FORMATS=wav,flac,aiff,mp3
DEFAULT_SAMPLE_RATE=48000
DEFAULT_BIT_DEPTH=24

# Email Configuration (disabled for testing)
ENABLE_EMAIL=false

# Studio Configuration
STUDIO_NAME=Test Raag Recording Studio
STUDIO_LOCATION=Test Location